pipeline {
   agent any
   tools {
      maven 'MAVEN'
      jdk 'Java11'
   }
   libraries {
      lib('SHRD_LBS_DEVOPS@main')
   }
   environment {
      CI = true
      ARTIFACTORY_ACCESS_TOKEN = credentials('artifactory-access-token')
   }
   
   stages {
      stage('Clone the repo') {
         agent {
            label 'Slave_Dev1'

         }
         steps {

            echo 'Clona el repo'
            git 'https://github.com/gabobriceno83/termometer.git'
         }
      }     
     
     
}

